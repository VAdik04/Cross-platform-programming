@page
@{
    ViewData["Title"] = "Лабораторні роботи";
}


<div class="row">
    <div class="col-7 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                Лабораторні роботи
            </div>
            <div class="card-body text-center">
                @for (int i = 1; i <= 3; ++i)
                {
                    <p>
                        <a asp-page="/Lab/Index" asp-route-Number=@i>
                            Лабораторна робота №@i
                        </a>
                    </p>
                }
            </div>
        </div>
    </div>
</div>