@using Duende.IdentityServer.Extensions
@using Microsoft.AspNetCore.Http.Extensions


<!DOCTYPE html>
<html lang="uk" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg border-bottom">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">IdentityServer</a>
                <button class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    @if (User.IsAuthenticated())
                    {
                        <div class="navbar-nav">
                            <a class="nav-link" asp-page="/Account/Logout">Вийти</a>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-nav">
                            <a class="nav-link" asp-page="/Account/Register">
                                Зареєструватись
                            </a>
                        </div>
                        <div class="navbar-nav">
                            <a class="nav-link"
                               asp-page="/Account/Login"
                               asp-route-ReturnUrl=@Context.Request.GetEncodedPathAndQuery()>
                                Ввійти
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>