@page
@model LoginModel
@{
    ViewData["Title"] = "Вхід";
}


<div class="row">
    <div class="col-7 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                Вхід
            </div>
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="All"></div>
                <form method="post">
                    <input type="hidden" asp-for=ReturnUrl value=@Model.ReturnUrl />
                    <div class="mt-3">
                        <label class="form-label" asp-for=Email>Пошта</label>
                        <input class="form-control"
                               asp-for=Email
                               value=@Model.Email />
                    </div>
                    <div class="mt-3">
                        <label class="form-label" asp-for=Password>Пароль</label>
                        <input class="form-control"
                               type="password"
                               asp-for=Password
                               value=@Model.Password />
                    </div>
                    <button class="btn btn-primary mt-3" type="submit">Ввійти</button>
                </form>
            </div>
        </div>
    </div>
</div>